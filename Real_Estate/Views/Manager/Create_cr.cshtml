
@{
    ViewBag.Title = "Create_cr";
    Layout = "~/Views/Manager_LayoutPage1.cshtml";
}

<div class="container mt-5 FormContainer">
    <h2 class="text-center mb-4">Create Receptionist</h2>
    <form id="branchForm" class="border p-4 rounded shadow formtag">

        <!-- Branch Code (Fixed) -->
        <div class="mb-3">
            <label for="branchCode" class="form-label formLabel">Branch Code:</label>
            <input type="text" class="form-control formInput" id="branchCode" value="001" readonly>
        </div>

        <!-- Created By (Fixed) -->
        <div class="mb-3">
            <label for="createdBy" class="form-label formLabel">Created By:</label>
            <input type="text" class="form-control formInput" id="createdBy" value="Branch" readonly>
        </div>

        <!-- Today's Date (Live) -->
        <div class="mb-3">
            <label for="todaysDate" class="form-label formLabel">Today's Date:</label>
            <input type="text" class="form-control formInput" id="todaysDate" readonly>
        </div>

        <!-- Receptionist ID (Fixed) -->
        <div class="mb-3">
            <label for="receptionistId" class="form-label formLabel">Receptionist Id:</label>
            <input type="text" class="form-control formInput" id="receptionistId" value="RES/121220249059" readonly>
        </div>

        <!-- Receptionist Name -->
        <div class="mb-3">
            <label for="receptionistName" class="form-label formLabel">Receptionist Name:</label>
            <input type="text" class="form-control formInput" id="receptionistName" placeholder="Enter Receptionist Name" required>
        </div>

        <!-- Mobile No -->
        <div class="mb-3">
            <label for="mobileNo" class="form-label formLabel">Mobile No:</label>
            <input type="text" class="form-control formInput" id="mobileNo" placeholder="Enter Mobile No" required>
        </div>

        <!-- Email Id -->
        <div class="mb-3">
            <label for="emailId" class="form-label formLabel">Email Id:</label>
            <input type="email" class="form-control formInput" id="emailId" placeholder="Enter Email Id" required>
        </div>

        <!-- Address -->
        <div class="mb-3">
            <label for="address" class="form-label formLabel">Address:</label>
            <textarea class="form-control formInput" id="address" rows="3" placeholder="Enter Address" required></textarea>
        </div>

        <!-- Create Button -->
        <div class="text-center d-grid gap-2">
            <button type="submit" class="btn btn-lg formButtom">Submit</button>
        </div>
    </form>
</div>

<script>
    // Set live date in the "Today's Date" field
    document.getElementById('todaysDate').value = new Date().toLocaleDateString('en-GB');
</script>



