        </div>

        <!-- End Date Field -->
        <div class="mb-3">
            <label for="endDate" class="form-label formLabel">End Date:</label>
            <!-- Corrected id, name, and removed placeholder -->
            <input type="date" class="form-control formInput" id="endDate" name="endDate" required>
        </div>

        <!-- View Button -->
        <div class="text-center d-grid gap-2">
            <button type="submit" class="btn btn-lg formButton">View</button>
        </div>
    </form>
</div>


